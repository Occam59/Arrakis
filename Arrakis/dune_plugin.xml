<dune_plugin>
  <name>arrakis</name>
  <caption>Arrakis</caption>
  <auto_resume>
    <enable>yes</enable>
  </auto_resume>
  <entry_points>
    <entry_point>
        <parent_media_url>root://applications</parent_media_url>
        <media_url>tvshow</media_url>
        <caption>Arrakis TV Shows</caption>
        <icon_url>gui_skin://large_icons/tv.aai</icon_url>
        <actions>
          <key_enter>
            <type>plugin_open_folder</type>
          </key_enter>
        </actions>
        <ip_address_required>yes</ip_address_required>
        <show_cookie_name>show_arrakis</show_cookie_name>
        <show_by_default>yes</show_by_default>
    </entry_point>
    <entry_point>
        <parent_media_url>root://applications</parent_media_url>
        <media_url>movie</media_url>
        <caption>Arrakis Movies</caption>
        <icon_url>gui_skin://large_icons/movie.aai</icon_url>
        <actions>
          <key_enter>
            <type>plugin_open_folder</type>
          </key_enter>
        </actions>
        <ip_address_required>yes</ip_address_required>
        <show_cookie_name>show_arrakis</show_cookie_name>
        <show_by_default>yes</show_by_default>
    </entry_point>
    <entry_point>
        <parent_media_url>root://applications</parent_media_url>
        <media_url>menu</media_url>
        <caption>Arrakis</caption>
        <icon_url>gui_skin://large_icons/sources.aai</icon_url>
        <actions>
          <key_enter>
            <type>plugin_open_folder</type>
          </key_enter>
        </actions>
        <ip_address_required>yes</ip_address_required>
        <show_cookie_name>show_arrakis</show_cookie_name>
        <show_by_default>yes</show_by_default>
    </entry_point>
    <entry_point>
        <parent_media_url>setup://applications</parent_media_url>
        <media_url>setup</media_url>
        <caption>Arrakis</caption>
        <icon_url>gui_skin://large_icons/movie.aai</icon_url>
        <actions>
          <key_enter>
            <type>plugin_open_folder</type>
          </key_enter>
        </actions>
    </entry_point>
  </entry_points>
  <type>php</type>
  <params>
     <program>arrakis.php</program>
  </params>
</dune_plugin>
